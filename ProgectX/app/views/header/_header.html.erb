  <div class = "container">
    
    <div class = "logo">
      <h1><a class = "mains" href = "/mains"> Main page</a></h1>
    </div>

    <% if current_user %>

      <div class = "nav1">
        <ul>
          <li class = "li1"><%= link_to current_user.name, user_profiles_path(current_user) %></li>
